<div class="header">
  
</div>
<div class="content">
  <form class="pure-form pure-form-stacked search" {{action "search" on="submit"}}>
    <fieldset>
      <div class="pure-u-1  pure-u-md-1">
          <label for="sources">Sources</label>
          {{view "select2"
            content=sourceList
            selection=sourcesField
            optionValuePath="content.value"
            optionLabelPath="content.label"
            id="sources"
            class="pure-input-1"
            multiple=true}}
        </div>
        <div class="pure-u-1 pure-u-md-11-24 countries">
          <label for="countries">Countries</label>
          {{view "select2"
            content=countryList
            selection=countriesField
            optionValuePath="content.value"
            optionLabelPath="content.label"
            id="countries"
            class="pure-input-1"
            multiple=true}}
        </div>
        <div class="pure-u-1 pure-u-md-11-24 sources">
        {{input type="submit" value="Generate Report" class="pure-u-1 pure-u-md-11-24 pure-button pure-button-primary"}}
        </div>
      </div>
    </fieldset>
  </form>

  {{outlet}}
</div>
