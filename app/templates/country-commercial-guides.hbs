<div class="header">
  <h1>Trade Events</h1>
</div>
<div class="content">
  <form class="pure-form pure-form-stacked search" {{action "search" on="submit"}}>
    <fieldset>
    <label for="industries">Keyword</label>
      {{input class="pure-input-1" value=qField}}
      <div class="pure-g">
      <div class="pure-u-1  pure-u-md-1">
          <label for="industries">Industries</label>
          {{view "select2"
            content=industryList
            selection=industriesField
            optionValuePath="content.value"
            optionLabelPath="content.label"
            id="industries"
            class="pure-input-1"
            multiple=true}}
        </div>
        <div class="pure-u-1 pure-u-md-11-24 countries">
          <label for="countries">Countries</label>
          {{view "select2"
            content=countryList
            selection=countriesField
            optionValuePath="content.value"
            optionLabelPath="content.label"
            id="countries"
            class="pure-input-1"
            multiple=true}}
        </div>
        <div class="pure-u-1 pure-u-md-11-24 industries">
        {{input type="submit" value="Search" class="pure-u-1 pure-u-md-11-24 pure-button pure-button-primary"}}
        </div>
      </div>
    </fieldset>
  </form>

  {{outlet}}
</div>
